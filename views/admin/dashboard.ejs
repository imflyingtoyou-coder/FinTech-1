<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <a href="/" class="logo">üè¶ Invoice Verification</a>
            <div class="nav-links">
                <a href="/">Public Site</a>
                <a href="/admin?key=<%= adminKey %>" class="active">Admin</a>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <div class="admin-header">
                <h1>Admin Dashboard</h1>
                <a href="/admin/new?key=<%= adminKey %>" class="btn btn-primary">+ Register New Invoice</a>
            </div>

            <div class="admin-section">
                <h2>Registered Invoices (<%= invoices.length %>)</h2>
                
                <% if (invoices.length === 0) { %>
                    <div class="empty-state">
                        <p>No invoices registered yet.</p>
                        <a href="/admin/new?key=<%= adminKey %>" class="btn btn-secondary">Register First Invoice</a>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>Invoice Number</th>
                                    <th>Bank Name</th>
                                    <th>Account Number</th>
                                    <th>Beneficiary</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% invoices.forEach(invoice => { %>
                                <tr>
                                    <td><strong><%= invoice.invoice_number %></strong></td>
                                    <td><%= invoice.bank_name %></td>
                                    <td><%= invoice.bank_account_number %></td>
                                    <td><%= invoice.beneficiary_name || '-' %></td>
                                    <td><%= new Date(invoice.created_at).toLocaleDateString() %></td>
                                    <td class="actions">
                                        <a href="/admin/edit/<%= invoice.id %>?key=<%= adminKey %>" class="btn-small btn-edit">Edit</a>
                                        <form action="/admin/delete/<%= invoice.id %>?key=<%= adminKey %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this invoice?');">
                                            <button type="submit" class="btn-small btn-delete">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>

            <div class="admin-section">
                <h2>Recent Verification Logs (<%= logs.length %>)</h2>
                
                <% if (logs.length === 0) { %>
                    <div class="empty-state">
                        <p>No verification requests yet.</p>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>Invoice Number</th>
                                    <th>IP Address</th>
                                    <th>Timestamp</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% logs.forEach(log => { %>
                                <tr>
                                    <td><%= log.invoice_number %></td>
                                    <td><%= log.ip_address %></td>
                                    <td><%= new Date(log.verified_at).toLocaleString() %></td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2025 Invoice Bank Verification System - Admin Panel</p>
        </div>
    </footer>
</body>
</html>
